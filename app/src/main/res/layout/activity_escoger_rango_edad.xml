<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/baby3"
    tools:context="com.example.adriana.babycare.escogerRangoEdad">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3 - 6 meses"
        android:id="@+id/button3_6"
        android:tag="1"
        android:layout_marginTop="105dp"
        android:onClick="irAVentanaPreguntas"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/cuadro_verde" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="6 - 9 meses"
        android:tag="2"
        android:id="@+id/button6_9"
        android:onClick="irAVentanaPreguntas"
        android:layout_alignTop="@+id/button3_6"
        android:layout_alignStart="@+id/button18_24"
        android:background="@drawable/cuadro_rosa"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="9- 12 meses"
        android:tag="3"
        android:id="@+id/button9_12"
        android:layout_alignTop="@+id/button6_9"
        android:layout_alignParentEnd="true"
        android:onClick="irAVentanaPreguntas"
        android:background="@drawable/cuadro_azul" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tag="4"
        android:text="12 - 18 meses"
        android:id="@+id/button12_18"
        android:onClick="irAVentanaPreguntas"
        android:layout_below="@+id/button3_6"
        android:layout_alignParentStart="true"
        android:background="@drawable/cuadro_amarillo"
        android:layout_marginTop="55dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tag="5"
        android:text="18 - 24 meses"
        android:id="@+id/button18_24"
        android:onClick="irAVentanaPreguntas"
        android:layout_below="@+id/button6_9"
        android:layout_alignStart="@+id/button36_m"
        android:background="@drawable/cuadro_verde"
        android:layout_marginTop="55dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="24 - 36 meses"
        android:tag="6"
        android:id="@+id/button24_36"
        android:layout_alignTop="@+id/button18_24"
        android:layout_alignStart="@+id/button9_12"
        android:onClick="irAVentanaPreguntas"
        android:background="@drawable/cuadro_rosa"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="36 o más meses"
        android:tag="7"
        android:id="@+id/button36_m"
        android:layout_below="@+id/button18_24"
        android:layout_centerHorizontal="true"
        android:onClick="irAVentanaPreguntas"
        android:background="@drawable/cuadro_azul"
        android:layout_marginTop="55dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Seleccione el Rango de Edad del Niño"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="19dp" />



</RelativeLayout>
