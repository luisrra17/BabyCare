<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adriana.babycare.escogerRangoEdad">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3 - 6 meses"
        android:id="@+id/button3_6"
        android:tag="3-6"
        android:layout_marginTop="185dp"
        android:onClick="irAVentanaPreguntas"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="6 - 9 meses"
        android:tag="6-9"
        android:id="@+id/button6_9"
        android:onClick="irAVentanaPreguntas"
        android:layout_alignTop="@+id/button3_6"
        android:layout_alignStart="@+id/button18_24" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="9- 12 meses"
        android:tag="9-12"
        android:id="@+id/button9_12"
        android:layout_alignTop="@+id/button6_9"
        android:layout_alignParentEnd="true"
        android:onClick="irAVentanaPreguntas" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tag="12-18"
        android:text="12 - 18 meses"
        android:id="@+id/button12_18"
        android:onClick="irAVentanaPreguntas"
        android:layout_below="@+id/button3_6"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tag="18-24"
        android:text="18 - 24 meses"
        android:id="@+id/button18_24"
        android:onClick="irAVentanaPreguntas"
        android:layout_below="@+id/button6_9"
        android:layout_alignStart="@+id/button36_m" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="24 - 36 meses"
        android:tag="24-36"
        android:id="@+id/button24_36"
        android:layout_alignTop="@+id/button18_24"
        android:layout_alignStart="@+id/button9_12"
        android:onClick="irAVentanaPreguntas" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="36 o más meses"
        android:tag="36-m"
        android:id="@+id/button36_m"
        android:layout_below="@+id/button18_24"
        android:layout_centerHorizontal="true"
        android:onClick="irAVentanaPreguntas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Seleccione el Rango de Edad del Niño"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:textSize="22dp" />

</RelativeLayout>
