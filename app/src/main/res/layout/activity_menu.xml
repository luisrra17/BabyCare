<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adriana.babycare.Menu">

    <Button
        android:text="Comenzar Test"
        android:id="@+id/buttonComenzar"
        android:onClick="irAEscogerGenero"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#636363"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:text="Ayuda"
        android:id="@+id/buttonAyuda"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#636363"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/buttonComenzar"
        android:layout_alignStart="@+id/buttonComenzar"
        android:layout_marginTop="50dp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:background="@drawable/mamita" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Quiénes Somos?"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
